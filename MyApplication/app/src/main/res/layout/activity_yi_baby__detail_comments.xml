<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorviews"
    tools:context=".yb_DetailComments_NoNeed">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <ImageView
            android:id="@+id/image08"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/default_face_man"
            android:layout_marginLeft="20dp"
            android:paddingTop="10dp"/>
        <TextView
            android:id="@+id/comment2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="宝宝"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/image08"
            android:layout_marginLeft="5dp"
            android:paddingTop="10dp"/>
        <TextView
            android:id="@+id/data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11月25日"
            android:textSize="16sp"
            android:layout_below="@+id/comment2"
            android:layout_toRightOf="@+id/image08"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刘晓玲"
            android:layout_below="@+id/comment2"
            android:layout_toRightOf="@+id/data"
            android:layout_marginLeft="15dp"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:src="@mipmap/home_baby_bg"
            android:layout_below="@+id/image08"
            android:layout_margin="15dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#FFF"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <RelativeLayout
            android:id="@+id/rlShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:onClick="showSharePopWindow">
            <ImageView
                android:id="@+id/image"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/club_op_share_btn"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/image"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:layout_width="3dp"
            android:layout_height="30dp"
            android:background="@color/colorviews"
            android:layout_gravity="center_vertical">
        </View>
        <RelativeLayout
            android:id="@+id/rlComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:onClick="showCommentPopWindow">
            <ImageView
                android:id="@+id/image2"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/club_op_reply_btn"/>
            <TextView
                android:id="@+id/myComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评论"
                android:textSize="18sp"
                android:layout_weight="1"
                android:layout_toRightOf="@+id/image2" />
        </RelativeLayout>
        <View
            android:layout_width="3dp"
            android:layout_height="30dp"
            android:background="@color/colorviews"
            android:layout_gravity="center_vertical">
        </View>
        <RelativeLayout
            android:id="@+id/rlZan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center_vertical">
            <RadioButton
                android:id="@+id/rg1"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@drawable/yibaby_zan_selector"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="25dp"
                android:layout_toRightOf="@+id/rg1"
                android:layout_marginLeft="5dp"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <ImageView
            android:id="@+id/image09"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/default_face_man"
            android:layout_marginLeft="20dp"
            android:paddingTop="10dp"/>
        <TextView
            android:id="@+id/seeComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="在哪里看积分啊"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/image09"
            android:layout_marginLeft="5dp"
            android:paddingTop="10dp"/>
        <TextView
            android:id="@+id/data2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11月25日"
            android:textSize="16sp"
            android:layout_below="@+id/seeComment"
            android:layout_toRightOf="@+id/image09"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="谢飞"
            android:layout_below="@+id/seeComment"
            android:layout_toRightOf="@+id/data2"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刚下载的不知道怎么玩？"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/image06"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/image09"
            android:layout_alignLeft="@+id/image09"
            android:layout_margin="20dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#FFF"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <RelativeLayout
            android:id="@+id/rlShare2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:onClick="showSharePopWindow">
            <ImageView
                android:id="@+id/image3"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/club_op_share_btn"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/image3"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:layout_width="3dp"
            android:layout_height="30dp"
            android:background="@color/colorviews"
            android:layout_gravity="center_vertical">
        </View>
        <RelativeLayout
            android:id="@+id/rlComment2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:onClick="showCommentPopWindow">
            <ImageView
                android:id="@+id/image4"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/club_op_reply_btn"/>
            <TextView
                android:id="@+id/myComment2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评论"
                android:textSize="18sp"
                android:layout_weight="1"
                android:layout_toRightOf="@+id/image4"
                android:layout_centerVertical="true" />
        </RelativeLayout>
        <View
            android:layout_width="3dp"
            android:layout_height="30dp"
            android:background="@color/colorviews"
            android:layout_gravity="center_vertical">
        </View>
        <RelativeLayout
            android:id="@+id/rlZan2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center_vertical">
            <RadioButton
                android:id="@+id/rg2"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@drawable/yibaby_zan_selector"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/zan2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="25dp"
                android:layout_toRightOf="@+id/rg2"
                android:layout_marginLeft="5dp"/>
        </RelativeLayout>
    </LinearLayout>
