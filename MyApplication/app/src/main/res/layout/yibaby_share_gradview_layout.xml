<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorviews">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/WeixinFra"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/image01"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/umeng_socialize_wxcircle" />
            <TextView
                android:id="@+id/weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信朋友圈"
                android:layout_below="@+id/image01" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/WeixniBest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/image02"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/umeng_socialize_wechat"/>
            <TextView
                android:id="@+id/weixinFr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信好友"
                android:gravity="center_horizontal"
                android:layout_below="@+id/image02" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/QQFra"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/image03"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/umeng_socialize_qq_on"/>
            <TextView
                android:id="@+id/QQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ好友"
                android:gravity="center_horizontal"
                android:layout_below="@+id/image03" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/QQKong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/image04"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/umeng_socialize_qzone_on"/>
            <TextView
                android:id="@+id/qqkongjian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ空间"
                android:gravity="center_horizontal"
                android:layout_below="@+id/image04" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/SinaWeibo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/image05"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/umeng_socialize_sina_on"/>
            <TextView
                android:id="@+id/weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新浪微博"
                android:gravity="center_horizontal"
                android:layout_below="@+id/image05" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/Emil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/image06"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/umeng_socialize_gmail_on"/>
            <TextView
                android:id="@+id/emil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮件"
                android:layout_below="@+id/image06"
                android:layout_marginLeft="10dp"/>
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btCancel"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="取消"
        android:layout_below="@+id/tableLayout"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/login_button_selector"/>
</LinearLayout>
