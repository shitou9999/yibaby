<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".YiBaby_ItemMilkDteil_NoNeed">
    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="#FFCE0B">
        <ImageView
            android:id="@+id/returns"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/comm_back"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/headline"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="奶粉每一项"
            android:textSize="25sp"
            android:textColor="#FFF"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <ExpandableListView
        android:id="@+id/vip"
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:childDivider="#E02D2F"
        android:indicatorRight="760dp"
        android:layout_below="@+id/line1">
    </ExpandableListView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/colorWhite"
        android:layout_below="@+id/vip"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/buyItNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即购买"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_milk_selector_shape"
            android:layout_marginLeft="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:onClick="buyItNow"/>
        <Button
            android:id="@+id/addShop"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="添加到购物车"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_milk_selector_shape2"
            android:layout_alignTop="@+id/buyItNow"
            android:layout_toRightOf="@+id/buyItNow"
            android:layout_toEndOf="@+id/buyItNow"
            android:layout_marginLeft="25dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:onClick="getAddShopingCar"
            android:clickable="true"/>
        <ImageView
            android:id="@+id/shopCar"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:src="@mipmap/comm_part_send_message_btn"
            android:layout_alignBottom="@+id/view10"
            android:layout_toRightOf="@+id/view10"
            android:layout_toEndOf="@+id/view10"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="toSeeShopCar"/>
        <View
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:background="@color/colorsbtitle"
            android:id="@+id/view10"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/addShop"
            android:layout_toEndOf="@+id/addShop"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp">
        </View>
    </RelativeLayout>
</RelativeLayout>
