<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorviews"
    tools:context=".yb_Comment1_Detil_NoNeed">
    <RelativeLayout
        android:id="@+id/commentDetil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bbs_comment_shape"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <com.example.administrator.YiBaby.CircleImageView
            android:id="@+id/image08"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/default_face_man"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/comment2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="宝宝"
            android:textSize="16sp"
            android:textColor="@color/colorTitle"
            android:layout_toRightOf="@+id/image08"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11月25日"
            android:textSize="16sp"
            android:layout_below="@+id/comment2"
            android:layout_toRightOf="@+id/image08"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刘晓玲"
            android:layout_below="@+id/comment2"
            android:layout_toRightOf="@+id/data"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试评论内容"
            android:textSize="16sp"
            android:layout_below="@+id/image08"
            android:layout_alignLeft="@+id/image08"
            android:layout_alignStart="@+id/image08"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"/>
        <HorizontalScrollView
            android:id="@+id/scrollView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comment"
            android:visibility="visible">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:visibility="visible">
                <ImageView
                    android:id="@+id/baby1"
                    android:layout_width="170dp"
                    android:layout_height="90dp"
                    android:src="@mipmap/home_baby_bg"
                    android:scaleType="centerCrop"
                    android:visibility="visible"/>
                <ImageView
                    android:id="@+id/baby2"
                    android:layout_width="170dp"
                    android:layout_height="90dp"
                    android:src="@mipmap/home_baby_bg"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="10dp"
                    android:visibility="visible"/>
                <ImageView
                    android:id="@+id/baby3"
                    android:layout_width="170dp"
                    android:layout_height="90dp"
                    android:src="@mipmap/home_baby_bg"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="10dp"
                    android:visibility="visible"/>
                <ImageView
                    android:id="@+id/baby4"
                    android:layout_width="170dp"
                    android:layout_height="90dp"
                    android:src="@mipmap/home_baby_bg"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="10dp"
                    android:visibility="visible"/>
                <ImageView
                    android:id="@+id/baby5"
                    android:layout_width="170dp"
                    android:layout_height="90dp"
                    android:src="@mipmap/home_baby_bg"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="10dp"
                    android:visibility="visible"/>
            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FFFF"
        android:baselineAligned="false"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/commentDetil">
        <View
            android:layout_width="0.5dp"
            android:layout_height="40dp"
            android:background="@color/button"
            android:layout_gravity="center_vertical">
        </View>
        <RelativeLayout
            android:id="@+id/rlShare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:onClick="showSharePopWindow">
            <ImageView
                android:id="@+id/share"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/club_op_share_btn" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/share"/>
        </RelativeLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="35dp"
            android:background="@color/button"
            android:layout_gravity="center_vertical">
        </View>
        <RelativeLayout
            android:id="@+id/rlComment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:onClick="showCommentPopWindow">
            <ImageView
                android:id="@+id/comments"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/club_op_reply_btn"/>
            <TextView
                android:id="@+id/comm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评论"
                android:textSize="18sp"
                android:layout_weight="1"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/comments"/>
            <TextView
                android:id="@+id/commCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/comm" />
        </RelativeLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="35dp"
            android:background="@color/button"
            android:layout_gravity="center_vertical">
        </View>
        <RelativeLayout
            android:id="@+id/rlZan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center_vertical">
            <RadioButton
                android:id="@+id/rg1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:button="@null"
                android:background="@drawable/yibaby_zan_selector"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赞"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/rg1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"/>
        </RelativeLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="40dp"
            android:background="@color/button"
            android:layout_gravity="center_vertical">
        </View>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/button"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
    </View>
    <LinearLayout
        android:id="@+id/moreComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:orientation="vertical">
    </LinearLayout>
    <TextView
        android:id="@+id/seeComment"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="查看更多评论"
        android:background="@drawable/bbs_comment_shape"
        android:layout_below="@+id/moreComment"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"/>
</RelativeLayout>
