<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorWhite"
        android:src="@mipmap/default_img_middle"
        android:scaleType="centerInside"
        android:layout_below="@+id/line1"/>
    <RelativeLayout
        android:id="@+id/detil"
        android:layout_below="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorWhite">
        <TextView
            android:id="@+id/title"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="每日宫幼儿奶粉4段 800g"
            android:textSize="20dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorTitle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="试用于："
            android:id="@+id/textView3"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/title"
            android:layout_alignStart="@+id/title" />
        <TextView
            android:id="@+id/uer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1-3岁幼儿"
            android:layout_alignTop="@+id/textView3"
            android:layout_toRightOf="@+id/textView3"
            android:layout_toEndOf="@+id/textView3" />
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥399.0"
            android:textSize="18sp"
            android:textColor="@color/colorprice"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_marginBottom="5dp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/comm_page_col_press_btn1"
            android:layout_marginRight="27dp"
            android:layout_marginEnd="27dp"
            android:id="@+id/imageView2"
            android:layout_alignBottom="@+id/uer"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:id="@+id/collectionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收藏"
            android:layout_gravity="right"
            android:layout_below="@+id/imageView2"
            android:layout_alignLeft="@+id/imageView2"
            android:layout_alignStart="@+id/imageView2" />
        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@color/colorsbtitle"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/title"
            android:layout_toLeftOf="@+id/imageView2"
            android:layout_toStartOf="@+id/imageView2"
            android:layout_marginRight="15dp">
        </View>
    </RelativeLayout>
</RelativeLayout>
